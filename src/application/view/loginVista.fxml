                           <stops>
                              <Stop color="BLACK" />
                              <Stop color="WHITE" offset="1.0" />
                           </stops>
                        </LinearGradient>
                     </stroke>
                  </Line>
                  <VBox spacing="10.0">
                     <children>
                        <Label contentDisplay="CENTER" text="Not a member? Register here." textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Label>
                        <TextField fx:id="registerusernameField" promptText="Username" />
                        <HBox spacing="10.0">
                           <children>
                              <PasswordField fx:id="registerPasswordField" promptText="Choose your password" />
                              <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" />
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </HBox>
                        <TextField fx:id="emailField" promptText="Email" />
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Label fx:id="registerLabel" prefHeight="27.0" prefWidth="80.0" text="Register As" />
                              <ChoiceBox fx:id="registerChoiceBox" prefWidth="150.0" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="registerButton" mnemonicParsing="false" onAction="#registerButtonclick" prefHeight="26.0" prefWidth="147.0" text="Register">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Button>
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </HBox>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </VBox>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
         </children>
      </Pane>
   </center>
   <right>
      <Region prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </right>
