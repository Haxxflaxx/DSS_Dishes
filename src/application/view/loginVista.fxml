   </top>
   <left>
      <Region prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </left>
   <bottom>
      <Region prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" BorderPane.alignment="CENTER">
         <children>
            <StackPane fx:id="vistaHolder" />
            <VBox spacing="10.0">
               <children>
                  <HBox spacing="5.0">
                     <children>
                        <TextField fx:id="usernameField" promptText="username">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </TextField>
                        <Region />
                        <PasswordField fx:id="passwordField" promptText="password">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </PasswordField>
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginScreen" prefHeight="25.0" prefWidth="80.0" text="Login">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox>
                     <children>
                        <Region HBox.hgrow="ALWAYS" />
